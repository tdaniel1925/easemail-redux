# EaseMail v2 â€” Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# SUPABASE (Required at build time - Stage 1)
# ============================================================================

# Supabase project URL (found in Supabase project settings)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anon key - public, safe to expose in browser (found in Supabase project settings)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase service role key - NEVER expose to browser, server-side only (found in Supabase project settings)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# APPLICATION
# ============================================================================

# App URL - http://localhost:3000 for dev, production URL for prod
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Encryption key for pgcrypto token encryption (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your-32-character-encryption-key

# ============================================================================
# ERROR TRACKING (Required at Stage 2)
# ============================================================================

# Sentry DSN for error tracking (get from https://sentry.io)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id

# Sentry organization slug (for source map uploads)
SENTRY_ORG=your-org-slug

# Sentry project name
SENTRY_PROJECT=easemail-v2

# Sentry auth token for uploading source maps (create at https://sentry.io/settings/account/api/auth-tokens/)
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ============================================================================
# OAUTH / EMAIL PROVIDERS (Required at Stage 4)
# ============================================================================

# Microsoft Azure AD (for Outlook/Exchange/Microsoft 365)
# Register app at https://portal.azure.com > App registrations
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=common

# Google Cloud (for Gmail/Google Workspace)
# Create OAuth client at https://console.cloud.google.com > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================================
# AI (Required at Stage 7)
# ============================================================================

# OpenAI API key for GPT-4o and Whisper
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# AI model to use for text generation (optional, defaults to gpt-4o)
AI_MODEL=gpt-4o

# ============================================================================
# STRIPE (Required at Stage 7)
# ============================================================================

# Stripe secret key (starts with sk_test_ or sk_live_)
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-key

# Stripe webhook signing secret (starts with whsec_)
# Get from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe price IDs (create products/prices in Stripe dashboard)
STRIPE_PRO_PRICE_ID=price_pro_monthly
STRIPE_PRO_ANNUAL_PRICE_ID=price_pro_annual
STRIPE_BUSINESS_PRICE_ID=price_business_monthly
STRIPE_BUSINESS_ANNUAL_PRICE_ID=price_business_annual

# ============================================================================
# TRANSACTIONAL EMAIL (Required at Stage 7)
# ============================================================================

# Resend API key for transactional emails
# Get from https://resend.com/api-keys
RESEND_API_KEY=re_your-resend-key

# From email address (must be verified in Resend)
RESEND_FROM_EMAIL=hello@easemail.ai

# ============================================================================
# SMS (Required at Stage 7)
# ============================================================================

# Twilio Account SID (starts with AC)
# Get from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACyour-twilio-account-sid

# Twilio Auth Token
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Twilio phone number (E.164 format, e.g., +15551234567)
TWILIO_PHONE_NUMBER=+15551234567

# ============================================================================
# CRON / SCHEDULED JOBS (Required at Stage 6)
# ============================================================================

# Secret for authenticating cron job requests
# Generate with: openssl rand -base64 32
CRON_SECRET=your-cron-secret
